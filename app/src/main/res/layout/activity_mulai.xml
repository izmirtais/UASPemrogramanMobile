<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activities.MulaiActivity">

    <ImageView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216"
        app:srcCompat="@drawable/background" />

    <FrameLayout
        android:id="@+id/mulai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="506dp"
        android:layout_height="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/footer" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="cursive"
        android:text="Nap Time"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/meditasi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/love"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="456dp"
        android:layout_marginRight="456dp"
        android:onClick="handleLove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/love" />

    <ImageView
        android:id="@+id/meditasi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rain"
        app:layout_constraintStart_toEndOf="@+id/love"
        app:srcCompat="@drawable/meditasi"
        android:onClick="handleMeditasi" />

    <ImageView
        android:id="@+id/alam"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="682dp"
        android:onClick="handleAlam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/meditasi"
        app:layout_constraintStart_toEndOf="@+id/love"
        app:srcCompat="@drawable/alam" />

    <ImageView
        android:id="@+id/rain"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="handleRain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/rain" />

    <ImageView
        android:id="@+id/bird"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rain"
        app:layout_constraintStart_toEndOf="@+id/meditasi"
        android:onClick="handleBird"
        app:srcCompat="@drawable/bird" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="250dp"
        android:layout_height="152dp"
        app:layout_constraintBottom_toBottomOf="@+id/meditasi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/line" />


</androidx.constraintlayout.widget.ConstraintLayout>